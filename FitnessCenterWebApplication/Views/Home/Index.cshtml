@{
    ViewData["Title"] = "Home Page";
}

<style>
    .hero-section {
        /* Arka plan resmi */
        background-image: linear-gradient(rgba(0, 0, 0, 0.6), rgba(0, 0, 0, 0.6)), url('../Images/kaplan.jpg');
        background-size: cover;
        background-position: center;
        background-attachment: fixed; /* Kaydırırken sabit kalma efekti (parallax) */
        height: 80vh; /* Sayfanın %80'ini kaplar */
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        text-shadow: 2px 2px 10px rgba(0, 0, 0, 0.8);
        border-radius: 15px; /* Köşeleri hafif yumuşatır */
        margin-top: 20px;
    }

    .display-4 {
        font-weight: bold;
        letter-spacing: 2px;
        border-bottom: 3px solid #ffc107; /* Kaplan temasına uygun sarı/turuncu alt çizgi */
        padding-bottom: 10px;
    }
</style>

<div class="hero-section">
    <div class="text-center">
        <h1 class="display-4">Welcome To Tiger Fitness Center</h1>
        <p class="lead mt-3">Gücünü Serbest Bırak, Vahşi Doğanı Keşfet!</p>
    </div>
</div>