@model FitnessCenter1.Models.Member
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <title>Fitness Center Login Form</title>
    <link rel="stylesheet" href="~/css/login.css">
</head>
<body>
    <div class="main">
        <h1>Fitness Merkezi Giriş</h1>

        @* 2. Formun nereye gideceğini Tag Helper ile belirtiyoruz *@
        <form asp-controller="Account" asp-action="Login" method="post">

            <label for="first">Kullanıcı adı:</label>
            @* 3. asp-for kullanarak name ve id'leri otomatik oluşturuyoruz *@
            @* Bu sayede name="MemberUserName" otomatik yazılır *@
            <input type="text" asp-for="MemberUserName" placeholder="Kullanıcı adınızı giriniz" required>

            <label for="password">Şifre:</label>
            @* Bu sayede name="MemberPassword" otomatik yazılır *@
            <input type="password" asp-for="MemberPassword" placeholder="Şifrenizi giriniz" required>

            <div class="wrap">
                <button type="submit">Giriş</button>
            </div>

            @* Eğer Controller'da ViewBag ile hata mesajı gönderdiysen burada göster *@
            @if (ViewBag.ErrorMessage != null)
            {
                <div style="color: red; margin-top: 10px;">
                    @ViewBag.ErrorMessage
                </div>
            }

        </form>

        <p>
            Üyeliğiniz yok mu?
            <a href="#" style="text-decoration: none;">Üyelik oluşturun</a>
        </p>
    </div>
</body>
</html>